<div class='section'>
  <%= simple_form_for @recipe, url: recipes_path, data: {turbo: false}, method: :post do |f| %>
  <div class='field'>
    <div class='control'>
      <%= f.input :name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
  <div class='field'>
    <div class='control'>
      <%= f.input :preparation_time, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
   <div class='field'>
    <div class='control'>
      <%= f.input :cooking_time, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
   <div class='field'>
    <div class='control'>
      <%= f.input :description, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
  <div class='field'>
    <div class='control'>
      <%= f.input :public, as: :boolean %>
    </div>
  </div>
  <div>
    <%= f.button :submit, class: 'button is-primary' %>
  </div>
  <% end %>
</div>
