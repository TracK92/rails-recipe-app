<div class='section recipe_food_container'>
<h3>Add Recipe Food</h3>
<%= simple_form_for [@recipe, @recipe.recipe_foods.create] do |f| %>
  <div class='field'>
    <div class='control'>
      <%= f.label :food, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
      <div class='select selection'>
    <%= f.select :food_id, Food.all.collect {|food| [food.name, food.id]},{
    include_blank: true} , class:"form-select" %>
  </div>
    </div>
  </div>
  <div class='field'>
    <div class='control'>
      <%= f.input :quantity, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
  
  <div>
    <%= f.button :submit, class: 'button is-primary' %>
  </div>
  <% end %>
</div>

